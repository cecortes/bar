---
import { Icon } from "astro-icon/components";

---

<section id="end" class="end-container">

  <!-- Title container -->
  <div class="title-end">
    <Icon name="rentoy" />
    <h2>Rentoy</h2>
    <p>Esperamos verte pronto en Rentoy</p>
  </div>

  <div class="copy-end">

    <!-- About & Phone -->
    <div class="about-phone">
  
      <div class="about-end">
        <h3>
          <Icon name="about" class="foot-icon"/>
          Rentoy
        </h3>
        <p class="p-end">Atrévete a disfrutar una experiencia única en el corazón de la ciudad.</p>
      </div>
  
      <div class="phone-end">
        <h3>
          <Icon name="phone" class="foot-icon"/>
          Teléfono
        </h3>
        <p class="p-end">55 1234 5678</p>
      </div>
  
    </div>
  
    <!-- Address & Openning -->
    <div class="addr-opn">
  
      <div class="address-end">
        <h3>
          <Icon name="location" class="foot-icon"/>
          Dirección
        </h3>
        <p class="p-end">Av. Insurgentes Sur 1234, Ciudad de México</p>
      </div>
  
      <div class="open-end">
        <h3>
          <Icon name="horario" class="foot-icon"/>
          Horarios
        </h3>
        <p class="p-end">Lunes a Domingo: 8:00 am - 10:00 pm</p>
      </div>
  
    </div>

  </div>


  <!-- Footer container -->
  <footer class="pie">
    <!-- Copyright -->
    <div class="pie-copy">
      <p>Hecho con <Icon name="heart" class="ico" /> by <a href="https://mexidev.com/" target="_blank">mexidev.</p>
    </div>

    <!-- Social Media -->
    <div class="pie-redes">
      <a href="https://www.facebook.com/" target="_blank">
        <Icon name="facebook" class="social-icon"/>
      </a>
      <a href="https://www.instagram.com/" target="_blank">
        <Icon name="instagram" class="social-icon"/>
      </a>
      <a href="https://www.twitter.com/" target="_blank">
        <Icon name="twitter" class="social-icon"/>
      </a>
      <a href="https://www.tiktok.com/" target="_blank">
        <Icon name="tiktok" class="social-icon"/>
      </a>
    </div>
  </footer>

</section>

<style>
  @import "tailwindcss";
  .end-container {
    display: flex;
    align-items: center;
    padding: 2rem;
    background-color: #1f1c1c;
    color: #1f1c1c;
    @apply flex-col justify-center flex-wrap;
    @apply md:flex-row md:justify-between;
  }

  .title-end {
    display: flex;
    align-items: center;
    margin-top: 2rem;
    margin-bottom: 2rem;
    text-align: center;
    @apply flex-row flex-wrap justify-center w-[100%];
    @apply md:w-[20%] md:mb-auto;
  }

  svg {
    width: 50px;
    height: 50px;
    margin-right: 2rem;
  }

  .title-end h2 {
    font-family: 'Outfit', sans-serif;
    font-weight: 700;
    font-size: 1.5rem;
    color: #F9D857;
  }

  .title-end p {
    font-family: 'Quicksand', sans-serif;
    font-weight: 500;
    font-size: 1.2rem;
    margin-top: 1rem;
    color: #F9D857;
  }

  .copy-end {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    background-color: #F9D857;
    padding: 1.5rem;
    border-radius: 1rem;
    @apply w-[100%] mb-[4rem] md:w-[75%];
  }

  .about-phone, .addr-opn {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    gap: .5rem;
  }

  .about-end, .phone-end, .address-end, .open-end {
    display: flex;
    align-items: center;
    text-align: center;
    @apply flex-col justify-evenly w-[45%];
    @apply md:flex-row md:justify-center ;
  }

  .phone-end, .open-end {
    margin-bottom: auto;
  }

  .foot-icon {
    width: 30px;
    height: 30px;
    margin-bottom: .5rem;
    color: #1f1c1c;
  }

  .about-end h3, .phone-end h3, .address-end h3, .open-end h3 {
    font-family: 'Outfit', sans-serif;
    font-weight: 700;
    font-size: 1.2rem;
    margin-right: auto;
    margin-bottom: .5rem;
    @apply md:w-[30%] md:text-left md:ml-2;
  }

  .p-end {
    text-align: start;
    text-wrap: pretty;
    margin-right: auto;
    font-family: 'Quicksand', sans-serif;
    font-weight: 500;
    font-size: 1rem;
    @apply md:w-[70%] md:text-left;
  }

  .pie {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 100px;
    padding: 1rem;
    background-color: #3d3d3c;
    color: #F9D857;
    border-radius: 1rem;
    @apply h-[100px] md:h-[60px];
  }

  .pie-copy {
    font-family: 'Quicksand', sans-serif;
    font-weight: 500;
    font-size: 1rem;
    margin-right: auto;
    display: flex;
    align-items: center;
    @apply w-[100%] text-center justify-center md:w-[45%] md:justify-between;
  }

  .pie-copy p {
    margin: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ico {
    width: 20px;
    height: 20px;
    margin: 0 10px;
    color: #F9D857;
  }

  .pie-copy a {
    color: #F9D857;
    text-decoration: none;
    font-family: 'Outfit', sans-serif;
    font-weight: 500;
    margin: 0 5px;
  }

  .pie-copy a:hover {
    cursor: pointer;
    text-decoration: underline;
  }

  .pie-redes {
    display: flex;
    align-items: center;
    gap: 1rem;
    width: 100%;
    margin-left: auto;
    margin-right: auto;
    @apply w-[100%] md:w-[45%];
    @apply md:justify-end md:mr-[0];
  }

  .pie-redes a {
    color: #F9D857;
    text-decoration: none;
  }


  .social-icon {
    width: 25px;
    height: 25px;
    transition: transform 0.3s ease-in-out;
  }

  .social-icon:hover {
    transform: scale(1.2);
  }

  .social-icon:active {
    transform: scale(1);
  }

</style>